@model HogentVmPortal.Shared.ViewModel.CourseCreate

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Template</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentId">Student (todo: select multiple)</label>
                <select asp-for="StudentId" asp-items="@(ViewData["Students"] as SelectList)" class="form-control">
                    <option value="">-- Choose a student --</option>
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TemplateId">Template (todo: select multiple)</label>
                <select asp-for="TemplateId" asp-items="@(ViewData["Templates"] as SelectList)" class="form-control">
                    <option value="">-- Choose a template --</option>
                </select>
                <span asp-validation-for="TemplateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
